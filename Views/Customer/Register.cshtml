@model BankingMVC.Models.Dtos.CreateCustomerRequestModel
<link rel="stylesheet" href="~/css/Register.css">
<div class="customer">
    <div class="text-center">
        <h2>Registration Form </h2>
    </div>
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <form asp-action="Register">
                <div class="customer">
                    <label asp-for="FirstName"></label>
                    <input class="form-control" type="text" asp-for="FirstName">
                    
                    <span asp-validation-for="FirstName"></span>
                </div>
                <div class="customer">
                    <label asp-for="MiddleName"></label>
                    <input class="form-control" type="text" asp-for="MiddleName">
                    <span asp-validation-for="MiddleName"></span>
                </div>
                <div class="customer">
                    <label asp-for="LastName"></label>
                    <input class="form-control" type="text" asp-for="LastName">
                    <span asp-validation-for="LastName"></span>
                </div>
                <div class="customer">
                    <label asp-for="PhoneNumber"></label>
                    <input class="form-control" type="text" asp-for="PhoneNumber">
                    <span asp-validation-for="PhoneNumber"></span>
                </div>
                <div class="customer">
                    <label asp-for="Email"></label>
                    <input class="form-control" type="text" asp-for="Email"> 
                    <span asp-validation-for="Email"></span>
                </div>
                 <div class="customer">
                    <label asp-for="Address"></label>
                    <input class="form-control" type="text" asp-for="Address">
                    <span asp-validation-for="Address"></span>
                </div>
                <div class="customer">5
                    <label asp-for="Pin"></label>
                    <input class="form-control" type="text" asp-for="Pin">
                    <span asp-validation-for="Pin"></span>
                </div>
                <i>chosee ur gender:</i>
                <label for="">Male</label>
                <input type="radio" name="Gender" value="1">
                <label for="">Female</label>
                <input type="radio" name="Gender" value="2">
                <div class="background">
                    <div class="shape"></div>
                    <div class="shape"></div>
                    <div class="shape"></div>
                </div>
                <div class="text-end pt-2">
                    <input class="btn btn-primary" type="submit" value="Submit" />
                </div>
            </form>
            <li>
                <a asp-controller="Home"  text asp-action="">Back</a>
            </li>
        </div>
        <div class="col-md-3"></div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}